a.NoLine {
	border: none;
}
a.NoLine:after {
	display: none;
	opacity: 0;
}
hr
	width 100%
	height 1px
	border none
	background black
	opacity .2
	margin 4vw 0

strong
	font-weight normal

h1,h2,h3,h4,h5,h6 {
	margin 0;
	padding: 0;
	font-weight: normal;
	font-family: typeface-secondary;
	line-height 130%
	position relative
	z-index 80;
	cursor: default;
}

h1 {
	font-size: 2rem;
}

h3 {
	font-size: 1rem;
	opacity: .4;
}

ul, li {
	list-style: none;
	padding: 0;
	margin: 0;
}

li {
	margin-bottom: .8rem;
	//margin-left: -1.5rem;
}

// BUTTONS

.PrimaryCTA {
	font-size: .8rem;
	color: color-text;
	text-transform: uppercase;
	letter-spacing: .04rem;
	font-weight: bold;
	text-align: center;
	border: 1px solid color-text;
	border-radius: 3px;
	padding: .5rem 1rem;
	background: none;

}

// TYPE STYLES

.Display1 {
	font-size: 12vw;
	line-height: 125%;
	font-family: typeface-secondary;
}
@media laptop {
	.Display1 {
		font-size: 5vw;
	}
}
.Display1 a, .Display1 i {
	font-family: typeface-secondary-italic;
}
.Display1 a {
	border-bottom: 1px solid color-gold;
}
.Display2 {
	font-size: 18px;
	line-height: 160%;
	font-family: typeface-primary;
}
@media laptop {
	.Display2 {
		font-size: 25px;
	}
}
.LabelText {
	font-size: .8rem
	text-transform: uppercase;
	letter-spacing: .04rem;
	font-weight: bold;
}
.Caption {
	font-size: .75rem
	text-transform: uppercase;
	letter-spacing: .2rem;
	font-family: typeface-tertiary;
}
@media laptop {
	.Caption {
		font-size: .75rem
	}
}
