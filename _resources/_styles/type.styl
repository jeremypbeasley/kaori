html
	font-size 15px
	font-family typeface-body, serif

body, p
	font-size 1rem

@media (min-width: 62em) {
  body, p {
    font-size: 1rem
  }
}

.Unselectable {
	-moz-user-select: none;
	-webkit-user-select: none;
	-ms-user-select: none;
}
p {
	line-height 200%
	text-align left
	cursor: default;
	padding-bottom: 1rem;
	margin -.5em 0 0em 0
}
@media laptop {
	p {
		padding-bottom: 1.2rem;
		margin -.5em 0 1em 0
	}
}
i {
	font-family: typeface-primary-italic;
	text-style: none;
}
a {
	text-decoration: none;
	border-bottom: 1px solid color-text;
	color: color-text;
	padding-bottom: .05rem;
	position: relative;
}
