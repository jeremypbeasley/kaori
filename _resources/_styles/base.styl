.SocialNav {
  margin-top: 1rem;
}
.SocialNav li {
  float: right;
}
.SocialNav li a {
  width: 30px;
  height: 30px;
  background-size: 97%;
  background-repeat: no-repeat;
  text-indent: 99999px;
  display: block;
  margin-left: 1rem;
  transition: opacity 200ms ease-out;
}
@media laptop {
  .SocialNav li a {
    width: 22px;
    height: 22px;
    margin-left: .5rem;
  }
}
.SocialNav li a:hover {
  opacity: .5;
  border-bottom: none;
}
.SocialNav li a.Twitter {
  background-image: url("http://cdn2.dropmark.com/39456/8d64ff48f9e52a330d698b17e8ac32aea79bbbf0/icon_twitter.png")
}
.SocialNav li a.Instagram {
  background-image: url("http://cdn2.dropmark.com/39456/a0bc1cf323fb4f99e3cc26ea49d7851d819dfc0c/icon_instagram.png")
}
.NavHamburger {
  position: absolute;
  width: 15px;
  height: 14px;
  background-image: url(_img/hammyfull.svg);
  background-repeat: no-repeat;
  background-position: top center;
  background-size: 100%;
  right: 0vw;
  top: 0vw;
  margin: 8vw;
  z-index: 100;
}
.NavHamburger.Open {
  background-position: bottom center;
}
@media laptop {
  .NavHamburger {
    display: none;
  }
}
