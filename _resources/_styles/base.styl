html {
  min-height 100%
}
* {
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  -webkit-font-smoothing antialiased
  font-smoothing antialiased
  box-sizing border-box
}
body {
  height: 100%;
  width: 100vw;
  overflow-y auto
  overflow-x hidden
  margin 0
  font-family typeface-primary
  background color-background
  color color-text
}
img {
  max-width: 100%;
  // filter: grayscale(100%);
  background: #999
}
.ProductThumb {
  display: block;
  width: 100%;
  height: 0px;
  padding-bottom: 100%;
  border-radius: 100%;
  background-size: 100% 100%;
  background-position: center center;
  transition: 200ms all ease-out;
  border: none;
}
.ProductThumb:hover {
  transform: scale(1.05)
  background-size: 105% 105%;
}
.ProductImage {
  display: block;
  width: 100%;
  height: 0px;
  padding-bottom: 100%;
  border-radius: 100%;
  background-size: 100% 100%;
  background-position: center center;
  transition: 200ms all ease-out;
  border: none;
}
