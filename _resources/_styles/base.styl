html {
  min-height 100%
}
* {
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)  
  -webkit-font-smoothing antialiased
  font-smoothing antialiased
  box-sizing border-box
}
body {
  height: 100%;
  width: 100vw;
  overflow-y auto
  overflow-x hidden
  margin 0
  font-family typeface-primary
  background color-background
  color color-text
}
img {
  max-width: 100%;
  // filter: grayscale(100%);
  background: #999
}
.Logo {
  width: 7rem;
  height: 1.5rem;
  background-image: url("_img/canlislogo.svg");
  background-repeat: no-repeat;
  text-indent: -9999999px;
  background-size: 100%;
  display: block;
  border: none; 
  position: absolute;
  top: 8vw;
  left: 8vw;
  color: color-background;
  text-align: center;
  z-index: 100;
  
}
@media laptop {
  .Logo {
    width: 8rem;
    height: 1.5rem;
    top: 4vw;
    left: 4vw;
    // top: 7vw;
    // left: 1.3vw;
    // transform: rotate(-90deg)
  }
}
.GlobalNav {
  position: absolute;
  top: 0vw;
  z-index: 90;
  padding-top: calc(8vw + 48px);
  padding-right: 8vw;
  right: 0vw;
  background: -moz-linear-gradient(top, rgba(242,241,239,.95) 0%, rgba(242,241,239,.95) 33%, rgba(242,241,239,0) 100%); 
  background: -webkit-linear-gradient(top, rgba(242,241,239,.95) 0%,rgba(242,241,239,.95) 33%,rgba(242,241,239,0) 100%); 
  background: linear-gradient(to bottom, rgba(242,241,239,.95) 0%,rgba(242,241,239,.95) 33%,rgba(242,241,239,0) 100%);
  width: 100vw;
  padding-bottom: 30vh;
  opacity: 0;
  transition: opacity 200ms ease-out;
}
.GlobalNav.Open {
  opacity: 1;
}
@media laptop {
  .GlobalNav {
    background: none;
    padding-top: calc(4vw + 8px);
    padding-right: 4vw;
    display: block;
    opacity: 1;
    padding-bottom: 0;
  }
}
.GlobalNavToggle {
  text-align: right;
  cursor: pointer;
}
.GlobalNav ul {
  //height: 0px;
  //overflow: hidden;
  //transition: all 100ms ease-out;
  //margin-top: 2rem;
}
.GlobalNav li {
  margin-bottom: 2rem;
}
@media laptop {
  .GlobalNav li {
    margin-bottom: 1rem;
  }
}
.GlobalNav li, .GlobalNav li a {
  border: 0px;
  text-align: right;
  transition: 200ms all ease-out;
}
